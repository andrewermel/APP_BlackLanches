<p style="color: green"><%= notice %></p>

<% content_for :title, "Items" %>

<h1>Items</h1>

<div id="items">
  <% @items.each do |item| %>
    <%= render item %>
    <p>
      <%= link_to "Show this item", item %>
    </p>
  <% end %>
</div>

<div style="margin-top: 20px;">
  <%= link_to "New item", new_item_path, class: "btn btn-primary" %>
  <%= link_to "← Voltar para Home", root_path, class: "btn btn-secondary" %>
</div>
